<section class="stronghold-viewer">
  <header class="viewer-header">
    <h2><i class="fas fa-castle"></i> Party Strongholds</h2>
    {{#if isGM}}
    <button type="button" data-action="reload" title="Reload all clients"><i class="fas fa-bolt"></i></button>
    {{/if}}
  </header>

  {{#if hasStrongholds}}
    <p><strong>Character:</strong> {{characterName}}</p>
    <table class="sg-table">
      <thead><tr><th>Name</th><th>Type</th><th>Level</th></tr></thead>
      <tbody>
        {{#each strongholds}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.type}}</td>
          <td class="cell-num">{{this.level}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p class="no-strongholds">No Active Strongholds</p>
  {{/if}}
</section>

