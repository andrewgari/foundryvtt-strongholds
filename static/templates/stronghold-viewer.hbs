<section class="stronghold-viewer">
  <header class="viewer-header">
    <h2><i class="fas fa-castle" aria-hidden="true"></i> {{localize "STRONGHOLDS.PartyStrongholds"}}</h2>
    {{#if isGM}}
    <button type="button" data-action="reload" aria-label="{{localize 'STRONGHOLDS.ReloadAllClients'}}" title="{{localize 'STRONGHOLDS.ReloadAllClients'}}"><i class="fas fa-bolt" aria-hidden="true"></i></button>
    {{/if}}
  </header>

  {{#if hasStrongholds}}
    {{#if characterName}}
    <p><strong>{{localize "STRONGHOLDS.Character"}}</strong> {{characterName}}</p>
    {{/if}}
    <table class="sg-table">
      <thead>
        <tr>
          <th>{{localize "STRONGHOLDS.Name"}}</th>
          <th>{{localize "STRONGHOLDS.Type"}}</th>
          <th>{{localize "STRONGHOLDS.Level"}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each strongholds}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.type}}</td>
          <td class="cell-num">{{this.level}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p class="no-strongholds">{{localize "STRONGHOLDS.NoActiveStrongholds"}}</p>
  {{/if}}
</section>

